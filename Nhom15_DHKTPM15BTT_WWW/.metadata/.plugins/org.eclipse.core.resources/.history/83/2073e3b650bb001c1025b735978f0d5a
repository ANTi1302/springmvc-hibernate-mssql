//	}
	@Override
	public List<Color> getDsColorsByIDProduct(String id) {
		Session currentSession = sessionFactory.getCurrentSession();
		Query<Color> theQuery = currentSession.createNativeQuery("select Product.product_id, Product.name, Product.price, Product.sale, Product.title, Product.details, Product.highlight, Product.new_product, Product.size, Product.created_at, Product.update_at, Product.amount, Product.voucher_id, \r\n"
				+ " from Color inner join Product Color.product.productId=Product.product_id", Color.class);
		// execute query and get result list
		List<Color> color = (List<Color>) theQuery.getResultList();
		// return the results
		return color;
	}

}
