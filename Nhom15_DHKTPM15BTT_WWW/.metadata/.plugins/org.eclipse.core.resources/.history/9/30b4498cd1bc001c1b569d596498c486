	@Override
	public List<Object[]> thongTinChiTiet(String id) {
		String hql= "SELECT c.img, c.product.name, c.product.price, c.product.sale, c.product.title, c.product.details, c.product.size, c.product.createdAt, c.product.amount, c.product.voucher, c.product.quatity, c.product.branchs\r\n"
				+ "FROM     Product p INNER JOIN\r\n"
				+ "                  Color c ON p.productId = c.product.productId\r\n"
				+ "				  where c.product.productId='"+id+"'\r\n"
				+ "GROUP BY c.img, c.product.name, c.product.price, c.product.sale, c.product.title,\r\n"
				+ "c.product.details, c.product.size, c.product.createdAt, c.product.amount, c.product.voucherId, c.product.quatity, c.product.branchId";
		Session currentSession = sessionFactory.getCurrentSession();
		TypedQuery<Object[]> query=currentSession.createQuery(hql,Object[].class);
		List<Object[]> product = (List<Object[]>) query.getResultList();
		return product;
	}
	
}
