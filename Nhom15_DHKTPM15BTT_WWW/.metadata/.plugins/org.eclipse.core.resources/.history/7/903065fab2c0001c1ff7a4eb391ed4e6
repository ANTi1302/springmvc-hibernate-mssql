package springmvc.demo.dao;

import java.util.List;

import org.hibernate.Session;
import org.hibernate.query.Query;
import org.springframework.stereotype.Repository;

import springmvc.demo.entity.Menus;
import springmvc.demo.entity.Users;

@Repository
public class UsersDaoImpl extends BaseDao implements UsersDao {

	@Override
	public Users timKiemUserLogin(String ten, String pass) {
		Session currentSession = sessionFactory.getCurrentSession();
		Query<Users> theQuery = currentSession.createQuery(" from Users where first_Name+' '+last_Name='"+ten+"' and password='"+pass+"'", Users.class);
		// execute query and get result list
		Users menus = theQuery.getSingleResult();
		// return the results
		return menus;
	}




}
