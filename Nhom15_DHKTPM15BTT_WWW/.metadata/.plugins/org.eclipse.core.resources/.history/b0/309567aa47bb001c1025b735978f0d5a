package springmvc.demo.dao;

import java.util.List;

import org.hibernate.Session;
import org.hibernate.query.Query;

import springmvc.demo.entity.Color;
import springmvc.demo.entity.Menus;

public class ColorDaoImpl extends BaseDao implements ColorsDao {

	@Override
	public List<Color> getDsColorsByIDProduct() {
		Session currentSession = sessionFactory.getCurrentSession();
		Query<Menus> theQuery = currentSession.createQuery(" from Menus", Menus.class);
		// execute query and get result list
		List<Menus> menus = theQuery.getResultList();
		// return the results
		return menus;
	}

}
