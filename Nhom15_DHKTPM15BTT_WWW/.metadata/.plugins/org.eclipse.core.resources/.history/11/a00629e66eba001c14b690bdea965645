package springmvc.demo.dao;

import java.util.List;

import org.hibernate.Session;
import org.hibernate.query.Query;
import org.springframework.stereotype.Repository;

import springmvc.demo.entity.Color;
import springmvc.demo.entity.Menus;
import springmvc.demo.entity.Product;

@Repository
public class ColorsDaoImpl extends BaseDao implements ColorsDao {

	@Override
	public List<Color> dsColorTop9() {
		 Session currentSession = sessionFactory.getCurrentSession();
	        // create a query  ... sort by last name
	        Query<Product> theQuery = 
	                        currentSession.createQuery("from Product order by created_at",
	                        		Color.class).setMaxResults(9);
	        // execute query and get result list
	        List<Color> colors = theQuery.getResultList();
	        // return the results		
	        return colors;
	}

}
